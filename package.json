{
  "name": "cambridge",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "node server.js",
    "dev:static": "npx http-server -p 3000 -g",
    "build": "npm run css:build",
    "css:build": "npx tailwindcss -i ./styles/input.css -o ./public/styles.css --minify --config ./styles/tailwind.config.js",
    "css:watch": "npx tailwindcss -i ./styles/input.css -o ./public/styles.css --watch --config ./styles/tailwind.config.js",
    "test": "node test.js",
    "test:api": "node --test api/**/*.test.js",
    "create:test-user": "node scripts/create-test-user.js"
  },
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.4",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "resend": "^6.9.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}
